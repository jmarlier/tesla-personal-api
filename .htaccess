# Protection des fichiers sensibles (compatible O2Switch)
<FilesMatch "\.(env|pem|key)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Bloquer l'accès aux dossiers de configuration
RedirectMatch 404 ^/(config|src|vendor|var)/

# Index par défaut
DirectoryIndex index.php

# Autoriser .well-known (pour Tesla)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} ^/\.well-known/
    RewriteRule ^ - [L]
</IfModule>

